<%= form_for @user, url: "/users/#{@user.id}" do |f| %>
<% if @user.errors.any? %>
  <ul class="alert">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "パスワード確認" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit %>
<% end %>
